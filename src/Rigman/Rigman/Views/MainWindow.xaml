<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Rigman.ViewModels;assembly=Rigman"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Rigman.Views;assembly=Rigman"
        xmlns:id="clr-namespace:Dock.Avalonia;assembly=Dock.Avalonia"
        xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Rigman.Views.MainWindow"
        Title="Rigman"
        Name="wndMain">
  <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*" Background="Transparent">
    <views:MenuView Grid.Row="0" Grid.Column="0" />
    <views:ToolBarView Grid.Row="1" Grid.Column="0" />
    <idc:DockControl Layout="{Binding Layout}" Margin="4" Grid.Row="2" Grid.Column="0" />
  </Grid>
</Window>
